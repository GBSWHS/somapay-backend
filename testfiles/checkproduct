# 어드민 로그인
curl -X POST http://localhost:8443/login \
  -H "Content-Type: application/json" \
  -d '{"student_number":"admin","password":"admin"}'

# 어드민이 상품 생성
curl -X POST http://localhost:8443/products \
  -H "Content-Type: application/json" \
  -H "Authorization: {{ADMIN UUID}}" \
  -d '{"booth_id":1,"name":"콜라","description":"시원한 음료","price":1000,"quantity":50}'

# 일반 유저가 상품 조회
curl -X GET http://localhost:8443/products/1 \
  -H "Authorization: {{USER UUID}}"

# 호스트가 상품 수정
curl -X PATCH http://localhost:8443/products/1 \
  -H "Content-Type: application/json" \
  -H "Authorization: {{HOST UUID}}" \
  -d '{"price":1200,"quantity":40}'
